rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les images
    match /images/{allPaths=**} {
      // Lecture autorisée pour tous
      allow read: if true;
      
      // Écriture autorisée pour tous (à sécuriser avec authentification si nécessaire)
      allow write: if true;
    }
  }
}
